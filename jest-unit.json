{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": [
    "./src/domain",
    "./test/unit"
  ],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/**/*.ts",
    "!**/node_modules/**"
  ]
}
